<Window x:Class="Cecom.Vista.Multicentros.AlarmasM.C_AlarmaM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cecom.Vista.Multicentros.AlarmasM"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        mc:Ignorable="d"
        Title="C_EventoM" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="20,0,20,0">
            <Label Content="Evento Multicentro" HorizontalAlignment="Center" Margin="0,0,0,20" />
            <Label Content="Nombre Evento" />
            <TextBox x:Name="amtxt_evento" />
            <Label Content="Fecha" />
            <DatePicker x:Name="amdt_fecha" />
            <Button Content="Guardar" Margin="0,20,0,0" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
