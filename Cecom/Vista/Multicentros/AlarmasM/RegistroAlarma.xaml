<Page x:Class="Cecom.Multicentros.RegistroAlarma"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cecom.Multicentros"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800" d:Background="white"
      Title="RegistroAlarma">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <StackPanel  Name="stack1">
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,30,0">
            <DockPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10 15 10 15" />
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </DockPanel.Resources>
            <Button Content="Nuevo" Click="Button_Click" />
            
        </DockPanel>
    </Grid>
</Page>
