<Window x:Class="Cecom.Vista.RadioBases.Empresas.C_Empresa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cecom.Vista.RadioBases.Empresas"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        mc:Ignorable="d"
        Title="C_Empresa" Height="350" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Empresa" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" />
            <Label Content="Nombre" />
            <TextBox x:Name="etxt_nombre" />
            <Label Content="Nombre Alias" />
            <TextBox x:Name="etxt_alias" />
            <Label Content="Direccion" />
            <TextBox x:Name="etxt_direccion" />
            <Label Content="Telefono" />
            <TextBox x:Name="etxt_telefono" />
            <Button x:Name="ebtn_save" Content="Guardar" Margin="0,20,0,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
